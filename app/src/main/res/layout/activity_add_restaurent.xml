<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="Restaurents.AddRestaurentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/blue_70">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Resturent"
            android:textSize="22sp"
            android:layout_marginTop="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="10dp"/>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"

            android:hint="Restaurant Name" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
           android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number" />

        <EditText
            android:id="@+id/editTextLicence"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Licence Number" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Price" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Description" />

        <EditText
            android:id="@+id/editTextFoodType"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Food Type" />

        <EditText
            android:id="@+id/editTextOpenTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:hint="Open Time (HH:MM)" />

        <EditText
            android:id="@+id/editTextCloseTime"
            android:layout_width="match_parent"
            style="@style/EditTextStyle"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="Close Time (HH:MM)" />

        <Button
            android:id="@+id/buttonAddRestaurant"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue_70"            android:text="Add Restaurant" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>