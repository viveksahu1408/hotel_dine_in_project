<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/gradient2_bg"
    android:orientation="vertical"
    tools:context=".forgetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#E8E9E9"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo_dark"
            android:padding="10dp"
            android:src="@drawable/ic_camera"
            app:tint="#1E90FF" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmailforpass"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:hint="Enter Email"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#EFB0B0B0" />

        <!-- Password Input -->


        <Button
            android:id="@+id/btnforgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#2195F1"
            android:padding="12dp"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBackLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#2195F1"
            android:padding="12dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBackReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#2195F1"
            android:padding="12dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>